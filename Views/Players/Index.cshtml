@model List<Player>



<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.First().FirstName)</th>
                    <th>@Html.DisplayNameFor(model=>model.First().LastName)</th>
                    <th>@Html.DisplayNameFor(model=>model.First().Age)</th>
                    <th>Akcje</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align_middle">
                            @Html.DisplayFor(modelItem=>item.FirstName)
                        </td>
                        <td class="align_middle">
                            @Html.DisplayFor(modelItem=>item.LastName)
                        </td>
                        <td class="align_middle">
                            @Html.DisplayFor(modelItem=>item.Age)
                        </td>
                        <td class="align-middle">
                            <a class="btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edycja</a>
                            <a class="btn-outline-primary" asp-action="Details" asp-route-id="@item.Id" >Szcegóły</a>
                            <a class="btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </td>
                    </tr>


                }
            </tbody>

        </table>
    </div>
</div>


<div class="text-white" style="display: flex; justify-content: center;">
    <a asp-controller="Players" asp-action="Create" class="btn btn-success" style="background-color: #ca8585; color: #ffffff;">Dodaj</a>
</div>


