@model Competition


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Potwierdzenie startu</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MinAge" class="control-label"></label>
                    <input asp-for="MinAge" class="form-control" readonly />
                    <span asp-validation-for="MinAge" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MaxAge" class="control-label"></label>
                    <input asp-for="MaxAge" class="form-control" readonly />
                    <span asp-validation-for="MaxAge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <form asp-action="Start">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Potwierdź" class="btn btn-danger" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-route-id="Id" asp-action="Details">Powrót</a>
                </div>


            </div>
        </div>
    </div>
</div>