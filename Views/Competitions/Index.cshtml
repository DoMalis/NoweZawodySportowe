@model List<Competition>
@{
    ViewData["Title"] = "List of Competitions";
}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model=>model.First().MinAge)</th>
                    <th>@Html.DisplayNameFor(model=>model.First().MaxAge)</th>
                    <th>@Html.DisplayNameFor(model=>model.First().CompetitionStatus)</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align_middle">
                            @Html.DisplayFor(modelItem=>item.Name);
                        </td>
                        <td class="align_middle">
                            @Html.DisplayFor(modelItem=>item.MinAge);
                        </td>
                        <td class="align_middle">
                            @Html.DisplayFor(modelItem=>item.MaxAge);
                        </td>
                        <td class="align_middle">
                            @Html.DisplayFor(modelItem=>item.CompetitionStatus);
                        </td>
                        <td class="align-middle">
                            <a class="btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            <a class="btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>

                        </td>
                    </tr>
                }
        </table>
    </div>
</div>

<div class="text-white">
    <a asp-controller="Competitions" asp-action="Create" class="btn btn-success">Dodaj</a>
</div>